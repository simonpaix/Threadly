    <div class="header">
      <div class="container">
        <h1>threadly</h1>
      </div>
    </div>

    <div class="main">
      <div class="container">
        <!-- Form goes here -->
        <%= form_for(@post) do |f| %>
          <%= f.label 'Leave your comment here' %>
          <%= f.text_field :comment %>
          <%= f.submit 'Submit', class: 'btn' %>
        <% end %>
        
        <ul class="comments">
          <% @posts.each do |post|%>
            <li><%=post.comment%></li>
          <%end%>
        </ul>

      </div>
    </div>